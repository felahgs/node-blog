<div class="border-b border-slate-300">
  <div class="py-5">
    <a href="/post/<%= post.id %>">
      <div class="">
        <h2 class="font-bold text-2xl">
          <%= post.title %>
        </h2>
        <h3 class="font-semibold text-md">
          <%= post.summary %>
        </h3>
      </div>
      <p class="text-gray-600">
        <%= post.content %>
      </p>

      <div class="text-gray-600 text-xs mt-4">
        <p>
          by <a class="decoration-dashed" href="user/<%= author.id  %>">
            <%= author.name %>
          </a> |
          <%= dateFromNow(post.createdAt) %>
            ago
            (<%= formatDate(post.createdAt) %>)
        </p>
      </div>
    </a>
  </div>
</div>