<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/head.ejs') %>
</head>

<body class="h-screen">
  <%- include('../includes/navbar.ejs') %>
    <main class="flex items-center justify-center">
      <section class="flex flex-col mt-10 h-full w-full max-w-4x1">
        <div class="flex flex-col px-6 items-center">
          <div class="flex flex-col justify-center">
            <h1 class="font-bold text-3xl">
              <%= post.title %>
            </h1>
            <h2>
              by: <%= post.author %>
            </h2>
            <h2>
              <%= post.published_date %>
            </h2>
            <div class="mt-4">
              <p class="pb-6 mb-6 text-gray-700 text-xl border-b border-slate-300">
                <%= post.summary %>
              </p>
              <p class="text-gray-600">
                <%= post.content %>
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>
</body>

</html>
