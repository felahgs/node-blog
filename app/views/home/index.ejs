<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/head.ejs') %>
</head>

<body class="h-screen">
  <%- include('../includes/navbar.ejs') %>
    <main class="flex items-center justify-center">
      <section class="flex flex-col mt-4 h-full w-full max-w-4xl">
        <% for( post of posts ) { %>
          <div class="px-6 border-b border-slate-300">
            <div class="py-8">
              <a href="post/<%= post.id %>">
                <h1 class="font-bold text-xl">
                  <%= post.title %>
                </h1>
                <h2 class="font-semibold text-md">
                  <%= post.summary %>
                </h2>
                <p class="text-gray-600">
                  <%= post.content %>
                </p>
              </a>
            </div>
          </div>
          <% } %>
      </section>
    </main>
</body>

</html>
